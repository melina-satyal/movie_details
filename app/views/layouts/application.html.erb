<!DOCTYPE html>
<html>
  <head>
    <title>MovieReviews</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  </head>

  <body>
    <nav class="navbar navbar-default">
      <div class="container">
        <div class="navbar-header">
          <%= link_to "Movie Details", root_path, class: "navbar-brand" %>
        </div>
        <ul class= "nav navbar-nav">
        <li> <%= link_to "Sign up", new_user_registration_path %></li>
        <% if user_signed_in? %>
          <li><%= link_to "Sign Out", destroy_user_session_path, method: :delete %> </li>

          <% else %>
          <li> <%= link_to "Log In", new_user_session_path %></li>
          <% end %>
        </ul>

        <ul class="nav navbar-nav navbar-right">

  
            <ul class="nav navbar-nav">
              <% Category.all.each do |category| %>
              <li class="<%= 'active' if params[:category] == category.mane %>">
                <%= link_to category.mane,movies_path(category: category.mane), class: "link" %>
              </li>
              <% end %>
                
              
            </ul>
           

        <% if user_signed_in? %>
          <li><%= link_to "Add Movie",new_movie_path %></li>
        <% end %>
        </ul>
      </div>

    </nav>
  	<p class="notice"><%= notice %></p>
       <p class="alert"><%= alert %></p>
       <div class ="container">

         <%= yield %>
  </container>
  </body>
</html>
