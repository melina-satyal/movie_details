<div class="row">
	<div class="col-md-3">
		<%=image_tag("movie.jpg", alt: "Example Image",  :size => "250x350")%>
	</div>

	
	
<div class="col-md-8">
	<h2><%= @movie.title      %></h2>
	<h3>Director:<%= @movie.author      %></h3>
	
	<p>Details:<%= @movie.description      %></p>
	</div>
</div>

<%= link_to "Back", root_path %>

<% if user_signed_in?   %>

	<% if @movie.user_id ==current_user.id %>

	<%= link_to "Edit", edit_movie_path(@movie) %>
	<%= link_to "Delete", movie_path(@movie), method: :delete, data: {confirm: "Are you Sure to delete"} %>
	<% end %>
<% end %>